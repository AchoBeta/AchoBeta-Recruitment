<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.achobeta.domain.recruitment.model.dao.mapper.QuestionnaireMapper">

    <resultMap id="EntryMap" type="com.achobeta.domain.recruitment.model.vo.EntryVO">
        <id property="id" column="id" jdbcType="BIGINT"/>
        <result property="title" column="title" jdbcType="VARCHAR"/>
        <result property="content" column="content" jdbcType="VARCHAR"/>
    </resultMap>

    <resultMap id="PeriodMap" type="com.achobeta.domain.recruitment.model.vo.TimePeriodVO">
        <id property="id" column="id" jdbcType="BIGINT"/>
        <result property="startTime" column="start_time" jdbcType="TIMESTAMP"/>
        <result property="endTime" column="end_time" jdbcType="TIMESTAMP"/>
    </resultMap>

    <select id="getEntries" parameterType="java.lang.Long" resultType="com.achobeta.domain.recruitment.model.vo.EntryVO">
        select
            e.id, e.title, qe.content
        from
            questionnaire q, questionnaire_entry qe, custom_entry e
        where
            q.is_deleted = 0 and qe.is_deleted = 0 and e.is_deleted = 0
          and q.id = #{questionnaireId,jdbcType=BIGINT} and q.id = qe.questionnaire_id and qe.entry_id = e.id
    </select>

    <select id="getPeriods" parameterType="java.lang.Long" resultType="com.achobeta.domain.recruitment.model.vo.TimePeriodVO">
        select
            p.id, p.start_time, p.end_time
        from
            questionnaire q, questionnaire_period qp, time_period p
        where
            q.is_deleted = 0 and qp.is_deleted = 0 and p.is_deleted = 0
          and q.id = #{questionnaireId,jdbcType=BIGINT} and q.id = qp.questionnaire_id and qp.period_id = p.id
    </select>

</mapper>
